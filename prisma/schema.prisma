// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Plant {
    id          Int     @id @default(autoincrement())
    name        String
    description String
    place       Place   @relation(fields: [placeId], references: [id])
    placeId     Int
    watered     DateTime
    interval    Int
    amount      Float
}

model Place {
    id      Int @id @default(autoincrement())
    name    String
    plants  Plant[]
}